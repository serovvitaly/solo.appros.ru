
<div class="btn-navbar" style="margin-bottom: 5px;">
  <div class="btn-group" data-toggle="buttons-checkbox">
    <button class="btn">Куплю</button>
    <button class="btn">Продам</button>
  </div>
  <div class="btn-group" data-toggle="buttons-checkbox">
    <button class="btn">1-к</button>
    <button class="btn">2-к</button>
    <button class="btn">3-к</button>
    <button class="btn">4-к</button>
    <button class="btn">5-к</button>
    <button class="btn">> 5</button>
  </div>
</div>


<table id="main-table" class="table table-bordered table-hover table-striped">
  <tbody>
  {% for item in items %}
    <tr id="item-{{ item.uid }}">
      <td>
        <div>
          {{ item.time_added }} <strong>{{ item.atitle }}</strong>
        </div>
        <div>
           Метро: {{ item.metro|raw }} Цена: {{ item.price }}
        </div>
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>